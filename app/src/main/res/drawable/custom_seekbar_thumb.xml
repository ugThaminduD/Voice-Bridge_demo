<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Solid color circle -->
    <solid android:color="#4CAF50" />

    <!-- Size of the thumb -->
    <size
        android:width="24dp"
        android:height="24dp" />

    <!-- Border around the thumb -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />

    <!-- Shadow effect -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>