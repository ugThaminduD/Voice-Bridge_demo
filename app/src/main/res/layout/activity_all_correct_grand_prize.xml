<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_white_shadow"
    android:padding="24dp"
    tools:context=".AllCorrectGrandPrizeActivity">

    <!-- Unlocked Text - Above Panda -->
    <TextView
        android:id="@+id/unlockedText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="You unlocked a new friend"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/green_dark"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/feedbackImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Panda Image - Centered -->
    <ImageView
        android:id="@+id/feedbackImage"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/imagineryfriend"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@+id/unlockedText"
        app:layout_constraintBottom_toTopOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Title - Below Panda, Above Button -->
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Letâ€™s help it grow!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@+id/feedbackImage"
        app:layout_constraintBottom_toTopOf="@+id/btn_ok"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- OK Button -->
    <Button
        android:id="@+id/btn_ok"
        style="@style/SolidGreenButton"
        android:layout_width="245dp"
        android:layout_height="55dp"
        android:src="@drawable/button_green"
        android:text="OK"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>