<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SongSelectionActivity">

    <ImageView
        android:id="@+id/topGameImage"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:scaleType="fitXY"
        android:src="@drawable/activity_sequence"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bottom_bg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Song Selection Container -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-40dp"
        android:background="@drawable/music_bottom_bg"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topGameImage">

        <LinearLayout
            android:id="@+id/songsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <!-- Title Section with Music Notes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <!-- Left Music Note -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/music_note"
                    android:alpha="0.7"
                    android:rotation="-10"
                    android:contentDescription="Music note" />

                <!-- Title Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick Your Song!"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/green_dark" />

                <!-- Right Music Note -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/music_note"
                    android:alpha="0.7"
                    android:rotation="10"
                    android:contentDescription="Music note" />
            </LinearLayout>

            <!-- Row Row Row Your Boat Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/rowRowBoatLayout"
                android:layout_width="match_parent"
                android:layout_height="223dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Heart icon in top-right corner -->
                    <ImageView
                        android:id="@+id/heartBoat"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="-2dp"
                        android:layout_marginEnd="-2dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Like song"
                        android:padding="4dp"
                        android:src="@drawable/heart_red" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Larger Song Image -->
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.6"
                            android:adjustViewBounds="true"
                            android:background="@drawable/rounded_white_shadow"
                            android:contentDescription="Row Row Row Your Boat"
                            android:scaleType="centerCrop"
                            android:src="@drawable/row" />

                        <!-- Song Info -->
                        <LinearLayout
                            android:layout_width="36dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.0"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingVertical="8dp"
                            android:paddingStart="20dp">

                            <!-- Play Button with Duration below it -->
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp">

                                <!-- Play Button -->
                                <FrameLayout
                                    android:id="@+id/playButtonContainerBoat"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerHorizontal="true">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/green_circle" />

                                    <ImageButton
                                        android:id="@+id/playButtonBoat"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        android:contentDescription="Play Row Row Your Boat"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/sound" />
                                </FrameLayout>

                                <!-- Duration below Play Button -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/playButtonContainerBoat"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/duration_badge"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:paddingHorizontal="12dp"
                                    android:paddingVertical="4dp">

                                    <ImageView
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginEnd="6dp"
                                        android:contentDescription="Duration"
                                        android:src="@drawable/clock" />

                                    <TextView
                                        android:layout_width="37dp"
                                        android:layout_height="wrap_content"
                                        android:text="0:59"
                                        android:textColor="@color/white"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Twinkle Twinkle Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/twinkleLayout"
                android:layout_width="match_parent"
                android:layout_height="223dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Heart icon in top-right corner -->
                    <ImageView
                        android:id="@+id/heartTwinkle"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="-2dp"
                        android:layout_marginEnd="-2dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Like song"
                        android:padding="4dp"
                        android:src="@drawable/heart_red" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Larger Song Image -->
                        <ImageView
                            android:layout_width="148dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.6"
                            android:adjustViewBounds="true"
                            android:background="@drawable/rounded_white_shadow"
                            android:contentDescription="Twinkle Twinkle Little Star"
                            android:scaleType="centerCrop"
                            android:src="@drawable/twinkle" />

                        <!-- Song Info -->
                        <LinearLayout
                            android:layout_width="36dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.0"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingVertical="8dp"
                            android:paddingStart="20dp">

                            <!-- Play Button with Duration below it -->
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp">

                                <!-- Play Button -->
                                <FrameLayout
                                    android:id="@+id/playButtonContainerStar"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerHorizontal="true">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/green_circle" />

                                    <ImageButton
                                        android:id="@+id/playButtonStar"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        android:contentDescription="Play Twinkle Twinkle Little Star"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/sound" />
                                </FrameLayout>

                                <!-- Duration below Play Button -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/playButtonContainerStar"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/duration_badge"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:paddingHorizontal="12dp"
                                    android:paddingVertical="4dp">

                                    <ImageView
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginEnd="6dp"
                                        android:contentDescription="Duration"
                                        android:src="@drawable/clock" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="2:12"
                                        android:textColor="@color/white"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Jack and Jill Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/jackAndJillLayout"
                android:layout_width="match_parent"
                android:layout_height="223dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Heart icon in top-right corner -->
                    <ImageView
                        android:id="@+id/heartJack"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="-2dp"
                        android:layout_marginEnd="-2dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Like song"
                        android:padding="4dp"
                        android:src="@drawable/heart_red" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Larger Song Image -->
                        <ImageView
                            android:layout_width="141dp"
                            android:layout_height="130dp"
                            android:layout_weight="1.6"
                            android:adjustViewBounds="true"
                            android:background="@drawable/rounded_white_shadow"
                            android:contentDescription="Jack and Jill"
                            android:scaleType="centerCrop"
                            android:src="@drawable/jack" />

                        <!-- Song Info -->
                        <LinearLayout
                            android:layout_width="36dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.0"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingVertical="8dp"
                            android:paddingStart="20dp">

                            <!-- Play Button with Duration below it -->
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp">

                                <!-- Play Button -->
                                <FrameLayout
                                    android:id="@+id/playButtonContainerJack"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerHorizontal="true">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/green_circle" />

                                    <ImageButton
                                        android:id="@+id/playButtonJack"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        android:contentDescription="Play Jack and Jill"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/sound" />
                                </FrameLayout>

                                <!-- Duration below Play Button -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/playButtonContainerJack"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/duration_badge"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:paddingHorizontal="12dp"
                                    android:paddingVertical="4dp">

                                    <ImageView
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginEnd="6dp"
                                        android:contentDescription="Duration"
                                        android:src="@drawable/clock" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="1:27"
                                        android:textColor="@color/white"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Future Songs / Load More Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/gray_light"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="More Songs Coming Soon!"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/green_dark"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stay tuned for future releases"
                        android:textSize="16sp"
                        android:textColor="@color/dark_gray"
                        android:gravity="center" />

                    <!-- Optional Load More Button -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/button_green"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notify Me"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>